@model Bioscoop.Models.LostItem

@{
    ViewData["Title"] = "Details";
}


<partial name="~/Views/Dashboard/DashboardHeader.cshtml" />


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <h1>Details</h1>

    <div>
        <h4>Voorwerp</h4>
        <hr />
        <img class="d-block mx-auto mb-4" src="~/imagesItems/@Model.Image" alt="" width="300" height="400" preserveAspectRatio="xMidYMid slice" />

        <dl class="row">
            <dt class="col-sm-2">
                Omschrijving
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
               Gevonden
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateLost)
            </dd>
            <dt class="col-sm-2">
                Afgegeven
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateFound)
            </dd>
            <dt class="col-sm-2">
                Gevonden door:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeFound)
            </dd>
            <dt class="col-sm-2">
                Uitgegeven door:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeRelease)
            </dd>
            <dt class="col-sm-2">
                Gevonden op locatie:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LocationFound)
            </dd>
            <dt class="col-sm-2">
                voorwerp is terecht:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemFound)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" role="button" asp-action="Index"><</a>
        @if (Model.ItemFound == false)
        {
            <a class="btn btn-dark" role="button" asp-route-id="@Model.ID" asp-action="FoundItem">Voorwerp teruggeven</a>
        }
    </div>
</main>

<partial name="~/Views/Dashboard/DashboardFooter.cshtml" />
