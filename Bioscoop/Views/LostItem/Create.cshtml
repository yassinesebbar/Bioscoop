@model Bioscoop.ViewDataWrapper.NonPersistantLostItems

@{
    ViewData["Title"] = "Create";
}

<partial name="~/Views/Dashboard/DashboardHeader.cshtml" />


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <h1>Create</h1>

    <h4>LostItem</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form  enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Omschrijving</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Datum verloren</label>
                    <input asp-for="DateLost" class="form-control" />
                    <span asp-validation-for="DateLost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Afbeelding voorwerp</label>
                    <input asp-for="ImageLostItem" class="form-control" />
                    <span asp-validation-for="ImageLostItem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Locatie gevonden voorwerp</label>
                    <input asp-for="LocationFound" class="form-control" />
                    <span asp-validation-for="LocationFound" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</main>

<partial name="~/Views/Dashboard/DashboardFooter.cshtml" />

