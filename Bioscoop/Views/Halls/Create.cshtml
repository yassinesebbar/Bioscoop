@model Bioscoop.Models.Hall

@{
    ViewData["Title"] = "Create";
}


<partial name="~/Views/Dashboard/DashboardHeader.cshtml" />


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

    <h1>Create</h1>

    <h4>Hall</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Naam</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Omschrijving</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Rijen</label>
                    <input asp-for="Rows" class="form-control" />
                    <span asp-validation-for="Rows" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Stoelen per rij</label>
                    <input asp-for="SeatsPerRow" class="form-control" />
                    <span asp-validation-for="SeatsPerRow" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


</main>

<partial name="~/Views/Dashboard/DashboardFooter.cshtml" />