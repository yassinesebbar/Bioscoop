@model IEnumerable<Bioscoop.Models.Hall>

@{
    ViewData["Title"] = "Index";
}



<partial name="~/Views/Dashboard/DashboardHeader.cshtml" />


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

    <h1>Hallen</h1>

    <p>
        <a class="btn btn-dark" role="button" asp-action="Create">+</a>
    </p>
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Titel
                </th>
                <th>
                    Omschrijving
                </th>
                <th>
                    Rijen
                </th>
                <th>
                    Stoelen per rij
                </th>
                <th>
                    Stoelen
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rows)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeatsPerRow)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumSeats)
                    </td>
                    <td>
                        <a class="text-white" type="button" asp-action="Edit" asp-route-id="@item.ID">
                            <span data-feather="edit"></span>
                        </a>

                        <a class="text-white" type="button" asp-action="Delete" asp-route-id="@item.ID">
                            <span data-feather="trash-2"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</main>

<partial name="~/Views/Dashboard/DashboardFooter.cshtml" />