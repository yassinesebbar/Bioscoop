@model IEnumerable<Bioscoop.Models.Movie>

@{
    ViewData["Title"] = "Home page app";
}


  <div id="pdfUrl" style="display: none;">@ViewBag.url</div>

  <div class="album py-5">
    <div class="container">
      <div class="row">

        @foreach (var item in Model) {
            <a class="col-md-4" href="/Events/EventsMovieFilterApp/@item.ID">
                  <div>
                    <div class="card mb-4 shadow-sm">
                      <img asp-append-version="true" class="bd-placeholder-img card-img-top" src="~/images/@item.ImageCover"   width="100%" height="400"  role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                      <div class="card-body">
                        <h3 class="card-text text-center"> @Html.DisplayFor(modelItem => item.Title) </h3>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                          </div>
                          <small class="text-muted">@item.ReleaseDate.ToString("yyyy")</small>
                        </div>
                      </div>
                    </div>
                  </div>
            </a>
                }
      </div>
    </div>
  </div>
   


